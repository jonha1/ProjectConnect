{
"version": 2,
"builds": [
    {
    "src": "package.json",  
    "use": "@vercel/next" 
    },
    {
    "src": "backend/project_flask/app.py",
    "use": "@vercel/python"
    }
],
"routes": [
    {
    "src": "/backend/project_flask/(.*)",
    "dest": "backend/project_flask/app.py"
    },
    {
    "src": "/(.*)", 
    "dest": "frontend/$1"  
    }
]
}
  